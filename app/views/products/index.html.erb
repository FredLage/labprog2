<h1>Listagem de produtos</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Categoria</th>
    <th>Preço</th>
    <th>Descrição</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.category %></td>
    <td><%= product.price %></td>
    <td><%= product.description %></td>
    <td><%= link_to 'Exibir', product %></td>
    <td><%= link_to 'Editar', edit_product_path(product) %></td>
    <td><%= link_to 'Excluir', product, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo produto', new_product_path %>
