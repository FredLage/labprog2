<h1>Listagem de pedidos</h1>

<table class="table table-striped">
  <tr>
    <th>Nome do cliente</th>
    <th>Preço</th>
    <th>Tipo de pagamento</th>
    <th>Status</th>
    <th colspan="3">Ações</th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.client.name %></td>
    <td><%= order.price %></td>
    <td><%= order.type_of_payment %></td>
    <td><%= order.status %></td>
    <td><%= link_to 'Exibir', order %></td>
    <td><%= link_to 'Editar', edit_order_path(order) %></td>
    <td><%= link_to 'Excluir', order, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo pedido', new_order_path %>
